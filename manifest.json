{
    "name": "Quizzes",
    "id": "quizzes",
    "packaging_format": 1,
    "description": {
        "en": "Multiple choice quiz platform with results analysis interface",
        "fr": "Plate-forme de quizzes à choix multiples (QCM) avec interface d'analyse des résultats"
    },
    "version": "1.3.0~ynh1",
    "url": "https://github.com/hipay/quizzes/",
    "upstream": {
        "license": "free",
        "website": "https://github.com/hipay/quizzes/",
        "admindoc": "https://yunohost.org/packaging_apps",
        "code": "https://github.com/hipay/quizzes/"
    },
    "license": "free",
    "maintainer": {
        "name": "John doe",
        "email": "john.doe@example.com"
    },
    "requirements": {
        "yunohost": ">= 4.2.4"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php7.3-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/quizzes",
                "default": "/quizzes"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            }
        ]
    }
}
